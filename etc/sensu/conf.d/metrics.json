      "subscribers": ["linux"],
      "handlers": ["metrics"],
      "interval": 10
    },
    "memory_metrics": {
      "type": "metric",
      "command": "memory-metrics.rb",
      "subscribers": ["linux"],
      "handlers": ["metrics"],
      "interval": 10
    },
    "iostat_metrics": {
      "type": "metric",
